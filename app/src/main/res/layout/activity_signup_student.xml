<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rulamardawi.myapplication.MainActivity"
    android:background="@drawable/background"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PSUT GATE"
        android:id="@+id/logo"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:padding="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo2"
        android:text="University Social Network"
        android:textSize="20dp"
        android:textColor="#555555"
        android:paddingLeft="77dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/logo"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:background="@drawable/linearlayout_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Clubs:"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:id="@+id/clubs"
            android:onClick="clubsAlert"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="Choose Clubs"
            android:id="@+id/chooseClubs"
            android:textColorHint="#666666"
            android:textSize="15dp"
            android:onClick="clubsAlert"


            android:focusable="true"
            android:focusableInTouchMode="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Courses:"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="Choose Courses"
            android:id="@+id/chooseCourses"
            android:textColorHint="#666666"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            android:onClick="coursesAlert"

            android:focusable="true"
            android:focusableInTouchMode="false" />

        <Button
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="100dp"
            android:layout_marginBottom="10dp"
            android:text="submit"
            android:id="@+id/submit"
            android:background="@drawable/default_bg"
            style="@style/DefaultButtonText"
            android:onClick="submit"



            />
        </LinearLayout>

</RelativeLayout>