<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rulamardawi.myapplication.MainActivity"
    android:background="@drawable/background"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PSUT GATE"
        android:id="@+id/logo"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo2"
        android:text="University Social Network"
        android:textSize="20dp"
        android:textColor="#555555"
        android:paddingLeft="77dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/logo"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:background="@drawable/linearlayout_bg">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:hint="University ID"
            android:id="@+id/universityId"
            android:textColorHint="#666666"
            android:textSize="15dp"
            android:inputType="number"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:hint="First Name"
            android:id="@+id/firstName"
            android:textColorHint="#666666"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:hint="Last Name"
            android:id="@+id/lastName"
            android:textColorHint="#666666"
            android:textSize="15dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:id="@+id/faculty"
            android:spinnerMode="dropdown"
            android:background="#ffffff"
            >
        </Spinner>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:textColorHint="#666666"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:hint="Password"
            android:password="true"
            android:textColorHint="#666666"
            android:textSize="15dp"
            android:id="@+id/password"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:hint="Re-Enter Password"
            android:password="true"
            android:textColorHint="#666666"
            android:textSize="15dp"
            android:id="@+id/reEnteredPassword"
            />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/radioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:id="@+id/studentRadioButton"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:id="@+id/instructorRadioButton"/>
        </RadioGroup>

        <Button
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:text="next"
            android:id="@+id/next"
            android:background="@drawable/default_bg"
            android:paddingBottom="10dp"
            style="@style/DefaultButtonText"
            android:onClick="signUp"

            />


    </LinearLayout>



</RelativeLayout>
