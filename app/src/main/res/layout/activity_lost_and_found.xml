<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg"
    tools:context="com.example.rulamardawi.myapplication.AddItemToMarketForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tob_bar"
        android:padding="10dp"
        android:id="@+id/toplayout"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost and Found"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_home_24dp"
            android:layout_marginRight="10dp"
            android:onClick="StudentHome"
            android:gravity="right"/>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/laf_list_view"
        android:layout_marginTop="10dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_below="@+id/toplayout">

    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_circle_24dp"
        android:layout_alignTop="@+id/laf_list_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#323253"/>

</RelativeLayout>
